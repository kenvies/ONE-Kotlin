<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/chat_item_rel"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="15dp"
        >
        <ImageView
            android:id="@+id/chat_item_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/null_data"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/chat_item_img"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/chat_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/grey_a700"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_toLeftOf="@+id/chat_item_time"
                    android:maxLines="1"
                    android:text="撒打算"
                    />
                <TextView
                    android:id="@+id/chat_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="5dp"
                    android:textColor="@color/grey_a500"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="17:00"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/chat_item_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/grey_a500"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="你有最新消息了"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
